{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=mentorshipdb;Trusted_Connection=True;"
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "logDirectory": "..\\Logs",
          "fileSizeLimitBytes": 104857600,
          "pathFormat": "Logs\\TaskManager.{Date}.log",
          "outputTemplate": "[{Level}] [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "CitiesForReport": [
    "Minsk",
    "London",
    "Warsaw"
  ],
  "FromDate": "04.04.2022"
}
